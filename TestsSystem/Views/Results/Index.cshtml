@model IEnumerable<TestsSystem.Models.Result>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-default">
            <div class="panel-heading" style="background-color : lightslategrey">
                <h2 class="text-center"><span class="glyphicon glyphicon-tags"></span> Results List</h2>
            </div>
            @if (Model.Count() != 0)
            { <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>
                                <h4><strong>Test title</strong></h4>
                            </th>
                            <th>
                                <h4><strong>@Html.DisplayNameFor(model => model.FirstOrDefault().Created_At)</strong></h4>
                            </th>
                            <th>
                                <h4><strong>@Html.DisplayNameFor(model => model.FirstOrDefault().Created_By)</strong></h4>
                            </th>
                            <th>
                                <h4><strong>Operation:</strong></h4>
                            </th>
                        </tr>
                    </thead>

                    @foreach (var item in Model)
                    {   <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Test.Title)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created_At)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Created_By)
                                </td>
                                <td>
                                    @Html.ActionLink("Show Answers", "Details", "Results", new { id = item.Id_result }, new { @class = "btn btn-primary" })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
             </div>
            }
            else
            {
                if (User.IsInRole("Teacher"))
                {
                    <h3 class="text-center"><strong>No answer has been given to this test yet!!</strong></h3>
                }
                else
                {
                    <h3 class="text-center"><strong>You haven't filled in any tests yet!!</strong></h3>
                }

            }
        </div>
    </div>
</div>

