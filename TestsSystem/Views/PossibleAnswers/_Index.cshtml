@model IEnumerable<TestsSystem.Models.PossibleAnswer>

<table class="table table-hover">
    
    @if (Model.Count() == 0)
    {
        <tr>
            <td>
               <h4 class="text-center">You haven't defined possible answers to this question</h4>
            </td>
        </tr>
    }
    else
    {
            foreach (var item in Model)
            {
                <tr>
                    <td class="text-justify">
                        <h4>PA: @Html.DisplayFor(modelItem => item.Content)</h4>
                    </td>
                    <td class="text-center">
                        <h4>@Html.DisplayFor(modelItem => item.isCorrect)</h4>
                    </td>
                    <td class="text-right">
                        <a href="@Url.Action("Edit", new { id = item.Id_posans })" class="modal-link btn btn-primary" data-target="#modal-container" data-toggle="modal">
                            <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                        </a>
                        &nbsp
                        <a href="@Url.Action("Delete", new { id = item.Id_posans })" class="modal-link btn btn-danger" data-target="#modal-container" data-toggle="modal">
                            <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                        </a>
                    </td>
                </tr>
            }
    }
</table>
