@model TestsSystem.Models.PossibleAnswer

<div class="modal-header" style="background-color : lightgreen">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
    <h4 class="modal-title"><strong>Are you sure you want to delete this possible answer?</strong></h4>
</div>
<div class="modal-body">
    <div>
        <dl class="dl-horizontal" style="font-size : large">
            <dt>
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>
            <dt>
                @Html.DisplayNameFor(model => model.isCorrect)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.isCorrect)
            </dd>
        </dl>
    </div>
</div>
<div class="modal-footer" style="background-color :  whitesmoke">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary" />
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
        </div>
    }
</div>
